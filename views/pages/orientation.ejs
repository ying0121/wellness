<div id="animated-3d-background-container" class="py-5" style="height: auto;">
    <div class="container video-content aos" data-aos="fade-up">
        <!-- Title -->
        <h1 class="text-white text-center"><%- component_text.menu_orientation %></h1>
        <p class="text-white fs-5 mb-4 text-center"><%- component_text.t_orientation_desc %></p>
        <div class="row frequently-section-fifteen py-4">
            <% for (let i = 0; i < documents.length; i ++) { %>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                    <div class="items-fift h-100 bg-white" style="display: flex; flex-direction: column;">
                        <a href="javascript:;" class="text-black fw-bolder m-0 mb-2"><%= documents[i].title %></a>
                        <p class="text-black-50 m-0 mb-3 cursor-pointer" style="flex-grow: 1;" data-needpopup-show="#orientation-detail-modal-<%= i %>"><%= documents[i].desc %></p>
                        <a href="./gf?category=documents&filename=<%= documents[i].document %>" class="line-arrow" target="_blank">
                            <i class="fas fa-download me-2"></i>
                            <%= component_text.t_download %> (<%= documents[i].size %>)
                        </a>
                    </div>
                </div>
            <% } %>
            <% for (let i = 0; i < documents.length; i++) { %>
                <div id="orientation-detail-modal-<%= i %>" class="needpopup fs-5">
                    <%= documents[i].desc %>
                </div>
            <% } %>
        </div>
    </div>
</div>