<!-- Hero Parallax Image -->
<% let img_id = Math.floor(Math.random() * HEADER_BANNER.length); %>
<div class="parallax-container w-100" style="background-image: url('./assets/images/pageimgs/<%= HEADER_BANNER[img_id].img %>'); height: 100vh;">
    <div class="d-flex align-items-center" style="height:100%;">
        <div class="p-5 col-12 col-md-6 aos" data-aos="fade-right">
            <div style="height:30%;" class="d-flex align-items-center text-white fs-2 aos" data-aos="fade-up">
                <%- component_text.menu_the_clinic %>
            </div>
            <div style="height:70%;" class="d-flex align-items-center text-white fs-4 mt-3 aos" data-aos="fade-up">
                <%- component_text.t_location_desc %>
            </div>
        </div>
        <div class="p-5 col-12 col-md-6 aos" data-aos="fade-left">
            <div class="banner-img aos aos-init aos-animate" data-aos="fade-up">
                <!-- Address -->
                <div class="banner-img1">
                    <div class="card-body d-flex justify-content-start">
                        <div class="contact-icon">
                            <i class="feather-map-pin"></i>
                        </div>
                        <div class="contact-details">
                            <h4 class="text-white"><%= component_text.placeholder_address %></h4>
                            <p class="text-white"><%= " " + contact_info.address + " " + contact_info.city + " " + contact_info.state + " " + contact_info.zip %></p>
                        </div>
                    </div>
                </div>
                <!-- Phone Number -->
                <div class="banner-img2">
                    <div class="card-body d-flex justify-content-start">
                        <div class="contact-icon">
                            <i class="feather-phone"></i>
                        </div>
                        <div class="contact-details">
                            <h4 class="text-white"><%= component_text.placeholder_phone_number %></h4>
                            <p class="text-white"><%= " " + contact_info.tel %></p>
                        </div>
                    </div>
                </div>
                <!-- Email -->
                <div class="banner-img3">
                    <div class="card-body d-flex justify-content-start">
                        <div class="contact-icon">
                            <i class="feather-mail"></i>
                        </div>
                        <div class="contact-details">
                            <h4 class="text-white"><%= component_text.placeholder_email_address %></h4>
                            <p class="text-white"><%= " " + contact_info.email %></p>
                        </div>
                    </div>
                </div>
                <!-- Fax Number -->
                <div class="banner-img4">
                    <div class="card-body d-flex justify-content-start">
                        <div class="contact-icon">
                            <i class="fa fa-fax"></i>
                        </div>
                        <div class="contact-details">
                            <h4 class="text-white"><%= component_text.c_fax %></h4>
                            <p class="text-white"><%= " " + contact_info.fax %></p>
                        </div>
                    </div>
                </div>
                <!-- Web Site -->
                <div class="banner-img5">
                    <div class="card-body d-flex justify-content-start">
                        <div class="contact-icon">
                            <i class="fa fa-globe"></i>
                        </div>
                        <div class="contact-details">
                            <h4 class="text-white"><%= component_text.c_web_site %></h4>
                            <p class="text-white"><%= " " + contact_info.domain %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Hero Parallax Image -->
<!-- Google Map -->
<% if (area_toggle.clinic_map == 1) { %>
    <div class="w-100 mb-5">
        <iframe
            id="preview"
            width="100%"
            height="480px"
            style="border:0"
            loading="lazy"
            allowfullscreen
            src="https://www.google.com/maps/embed/v1/place?key=<%= google_api_key %>&q=<%= contact_info.address %> <%= contact_info.city %> <%= contact_info.state %> <%= contact_info.zip %>">
        </iframe>
    </div>
<% } %>
<!-- /Google Map -->
