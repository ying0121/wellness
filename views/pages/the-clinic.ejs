<!-- Working Hours -->
<section class="working-hours-section py-5">
    <div class="container">
        <% if (area_toggle.clinic_workinghour === 1) { %>
            <div class="title-heading pdbt-30 aos" data-aos="fade-up" data-aos-duration="800" style="color:black!important;">
                <h2 class="mb-4" style="font-weight: 600; position: relative; display: inline-block;">
                    <i class="fa fa-clock me-2" style="color: #007bff;"></i>
                    <%= component_text.t_working_hour %>
                </h2>
            </div>
            <div class="working-hours-list">
                <% for (let i = 0; i < working_hours.length; i++) { %>
                    <div class="working-hour-item aos" data-aos="fade-right" data-aos-delay="<%= i * 100 %>" data-aos-duration="600" data-aos-easing="ease-out">
                        <div class="hour-card">
                            <div class="hour-icon">
                                <i class="fa fa-calendar-check"></i>
                            </div>
                            <div class="hour-content">
                                <div class="hour-day"><%= working_hours[i].name %></div>
                                <div class="hour-time"><%= working_hours[i].time %></div>
                            </div>
                            <div class="hour-indicator"></div>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } %>
        <% if (area_toggle.clinic_afterhours === 1) { %>
            <div class="after-hours-info aos mt-3" data-aos="fade-up" data-aos-delay="<%= working_hours.length * 100 + 200 %>" data-aos-duration="800" style="color:black!important;" class="mt-5">
                <div class="after-hours-card">
                    <i class="fa fa-info-circle me-2" style="color: #ffc107;"></i>
                    <%- component_text.t_after_hours %>
                </div>
            </div>
        <% } %>        
    </div>
</section>
<!-- /Working Hours -->

