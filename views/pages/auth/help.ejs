<div class="parallax-container min-vh-100">
    <video class="parallax-video" autoplay muted loop playsinline>
        <source src="./assets/videos/lock.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="d-flex align-items-center min-vh-100 video-blur">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-8 rounded p-4 aos" data-aos="fade-up" style="background-color: #10101060; border: 1px solid #FAFAFA80;">
                    <!-- Title -->
                    <div class="w-100 d-flex justify-content-center align-items-center mb-2">
                        <div class="d-none d-md-block" id="help-lottie" style="width: 150px; height: 150px;"></div>
                        <div class="d-block d-md-none fs-1 text-white fw-bold"><%= component_text.t_pa_su_account %></div>
                    </div>
                    <!-- Desc -->
                    <div class="text-white fw-bold mb-2 mx-3 fs-5"><%= component_text.t_pa_ah_hques %></div>
                    <!-- Alert Begin -->
                    <div class="alert alert-danger alert-dismissible fade show d-none" id="alert-message"></div>
                    <!-- Alert End -->
                    <!-- Form Begin -->
                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <!-- Forgot Account Radio -->
                                <div class="form-check mb-4">
                                    <input class="form-check-input forgot_type" type="radio" value="1" name="forgot_type" id="forgot_account" checked />
                                    <label class="form-check-label text-white" for="forgot_account"><%= component_text.t_pa_ah_facc %></label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <!-- Forgot Pasword Radio -->
                                <div class="form-check mb-4">
                                    <input class="form-check-input forgot_type" type="radio" value="2" name="forgot_type" id="forgot_password" />
                                    <label class="form-check-label text-white" for="forgot_password"><%= component_text.t_pa_ah_fpwd %></label>
                                </div>
                            </div>
                            <div class="col-md-6 forgot-account">
                                <!-- First Name Input -->
                                <div class="form-focus mb-4" id="fname-container">
                                    <input type="text" name="first_name" id="first_name" class="form-control floating text-white bg-transparent" />
                                    <label class="focus-label text-white" for="first_name"><%= component_text.placeholder_first_name %></label>
                                </div>
                            </div>
                            <div class="col-md-6 forgot-account">
                                <!-- Last Name Input -->
                                <div class="form-focus mb-4" id="lname-container">
                                    <input type="text" name="last_name" id="last_name" class="form-control floating text-white bg-transparent" />
                                    <label class="focus-label text-white" for="last_name"><%= component_text.placeholder_last_name %></label>
                                </div>
                            </div>
                            <div class="col-md-12 forgot-account">
                                <!-- Birthday Input -->
                                <div class="form-focus mb-4" id="dob-container">
                                    <input type="date" name="dob" id="help-dob" class="form-control floating text-white bg-transparent" />
                                    <label class="focus-label text-white" for="help-dob"><%= component_text.placeholder_dob %></label>
                                </div>
                            </div>
                            <div class="col-md-12 forgot-password d-none">
                                <!-- Email input -->
                                <div class="form-focus mb-4" id="email-container">
                                    <input type="text" name="email" id="email" class="form-control floating text-white bg-transparent" />
                                    <label class="focus-label text-white" for="email"><%= component_text.placeholder_login_name %></label>
                                </div>
                            </div>
                            <!-- Image Captcha -->
                            <div class="col-md-12 forgot-password d-none mb-4">
                                <div class="row justify-content-start align-items-center">
                                    <div class="col-md-6">
                                        <div class="d-flex justify-content-between align-items-center gap-1">
                                            <div id="help_captcha_image"><%- captcha_image %></div>
                                            <i id="captcha_change" class="fa fa-lg fa-rotate-right fs-2 text-primary cursor-pointer"></i>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-focus" id="captcha-container">
                                            <input type="password" id="captcha" name="captcha" class="form-control floating text-white bg-transparent" />
                                            <label class="focus-label text-white" for="contact_captcha"><%= component_text.placeholder_captcha %></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Submit button -->
                        <button id="submit" name="action" value="submit" class="btn btn-rounded btn-outline-info w-100 py-2" role="button"><%= component_text.btn_submit %></button>
                        <!-- Help Buttons -->
                        <div class="row pt-4">
                            <div class="col-md-12 d-flex justify-content-start">
                                <a href="./login" class="btn btn-link text-primary" role="button"><span><%= component_text.link_sign_in %></span></a>
                            </div>
                        </div>
                    </div>
                    <!-- Form End -->
                    <hr class="my-1" />
                    <p class="text-white m-0 mt-3"><%= component_text.t_pa_pr_footer %></p>
                </div>
            </div>
        </div>
    </div>
</div>