                            <li><a class="dropdown-item" href="<%= site_url %>/educations?p=nutrition"><%= component_text.menu_nutrition %></a></li>
                            <li><a class="dropdown-item" href="<%= site_url %>/educations?p=pain"><%= component_text.menu_pain %></a></li>
                            <li><a class="dropdown-item" href="<%= site_url %>/educations?p=pain_back"><%= component_text.menu_pain_back %></a></li>
                            <li><a class="dropdown-item" href="<%= site_url %>/educations?p=pulmonary_disease"><%= component_text.menu_pulmonary_disease %></a></li>
                            <li><a class="dropdown-item" href="<%= site_url %>/educations?p=tobacco_treatment"><%= component_text.menu_tobacco_treatment %></a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link <%= page_tag == "insurances" ? "active fw-bold" : "fw-semibold" %>" href="<%= site_url %>/insurances"><%= component_text.menu_insurances %></a></li>
                    <li class="nav-item"><a class="nav-link <%= page_tag == "contact" ? "active fw-bold" : "fw-semibold" %>" href="<%= site_url %>/contact"><%= component_text.menu_contact %></a></li>
                    <% if (patient_id && patient_name) { %>
                        <li class="nav-item"><a class="nav-link <%= page_tag == "vault" ? "active fw-bold" : "fw-semibold" %>" href="<%= site_url %>/vault"><%= component_text.menu_vault %></a></li>
                    <% } %>
                </ul>
                <!-- Sign In/Out, Pt Info, Language Buttons In Browser Mode -->
                <div class="d-none d-lg-flex justify-content-lg-start align-items-lg-center gap-4">
                    <!-- Notifications -->
                    <ul class="nav header-navbar-rht">
                        <li class="nav-item dropdown noti-nav me-3 pe-0">
                            <a href="javascript:;" class="dropdown-toggle nav-link p-0" data-bs-toggle="dropdown">
                                <i class="fa fa-bell fs-4"></i>
                                <span class="position-absolute top-0 start-100 translate-middle p-2 <%= alerts.length > 0 ? "bg-danger border border-light rounded-circle" : "" %>">
                                    <span class="visually-hidden">New alerts</span>
