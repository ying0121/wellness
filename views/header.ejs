                            <div class="topnav-dropdown-header">
                                <div class="d-flex justify-content-between align-items-center px-4 my-3">
                                    <div class="fw-bold"><%= component_text.t_notification %></div>
                                    <div class="avatar" style="width: 2rem !important; height: 2rem !important;">
                                        <span class="avatar-title rounded-circle border border-white bg-danger"><%= alerts.length %></span>
                                    </div>
                                </div>
                                <hr class="mt-0" />
                            </div>
                            <div class="noti-content px-3">
                                <% if (!alerts.length) { %>
                                    <div class="w-100 d-flex justify-content-center align-items-center text-secondary fs-4 my-4 mb-4"><%= component_text.t_no_alert %>!</div>
                                <% } %>
                                <% for (let i = 0; i < alerts.length; i ++) { %>
                                    <div class="d-flex justify-content-between align-items-center gap-2 mb-4">
                                        <% if (alerts[i].image) { %>
                                            <img src="<%= site_url + "/assets/images/alerts/" + alerts[i].image %>" class="rounded-pill" style="width: 4rem !important; height: 4rem !important;" />
