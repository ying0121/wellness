<!-- Work Time -->
<div id="hours-toggle" class="hours-toggle aos" data-aos="fade-left">
    <i class="fa fa-clock fs-5"></i>
</div>
<!-- /Work Time -->
<!-- Working Hours Panel -->
<div id="working-hours" class="working-hours">
    <p class="h4 my-3 ms-4"><%= component_text.t_working_hour %></p>
    <ul>
        <% for (let i=0; i < working_hours.length; i++) { %>
            <div class="mx-1 text-black">
                <i class="fa fa-check text-success mx-2 fs-4"></i>
                <%= working_hours[i].name %> : <%= working_hours[i].time %>
                <hr class="my-3">
            </div>
        <% } %>
    </ul>
</div>
<!-- /Working Hours Panel -->