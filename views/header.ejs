                            <li><a class="dropdown-item" href="<%= site_url %>/educations?p=aye_vision"><%= component_text.menu_aye_vision %></a></li>
                            <li><a class="dropdown-item" href="<%= site_url %>/educations?p=cholesterol"><%= component_text.menu_cholesterol %></a></li>
                            <li><a class="dropdown-item" href="<%= site_url %>/educations?p=diabietes"><%= component_text.menu_diabietes %></a></li>
