                            <% } %>
                        <% } %>
                    </div>
                    <div class="d-flex align-items-center gap-1">
                        <div class="btn p-1 langbtn <%= language === "en" ? "active" : "" %>" onclick="setLang('en');">
                            <img src="<%= site_url %>/assets/images/flags/en.png" style="min-width: 20px; max-width: 20px; min-height: 20px; max-height: 20px;" />
                        </div>
                        <div class="btn p-1 langbtn <%= language === "en" ? "" : "active" %>" onclick="setLang('es');">
                            <img src="<%= site_url %>/assets/images/flags/es.png" style="min-width: 20px; max-width: 20px; min-height: 20px; max-height: 20px;" />
