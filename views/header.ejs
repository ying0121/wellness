                    <% if (contact_info.portal_show == 1) { %>
                        <a href="<%= contact_info.portal %>" class="themesflat-button font-default process mx-1 text-gray" target="_blank"><span><%= component_text.link_portal %></span></a>
                    <% } %>
                    <% if (area_toggle.vault_area) { %>
                        <% if (!patient_id || !patient_name) { %>
                            <a href="<%= site_url %>/login" class="themesflat-button font-default process mx-1 text-gray"><span><%= component_text.link_sign_in %></span></a>
                        <% } %>
                    <% } %>
                </div>
                <div class="d-flex align-items-center gap-1">
                    <div class="btn py-0 px-1 langbtn <%= language === "en" ? "active" : "" %>" onclick="setLang('en');">
                        <img src="<%= site_url %>/assets/images/flags/en.png" style="width: 16px; height: 16px;" />
                    </div>
                    <div class="btn py-0 px-1 langbtn <%= language === "en" ? "" : "active" %>" onclick="setLang('es');">
                        <img src="<%= site_url %>/assets/images/flags/es.png" style="width: 16px; height: 16px;" />
                    </div>
                    <% if (patient_id && patient_name) { %>
                        <div class="d-flex justify-content-center align-items-center mx-3">
                            <button class="d-none" data-bs-toggle="modal" data-bs-target="#info-manage-modal" id="patient-info-modal-view"></button>
                            <div class="patient-info bg-primary d-flex justify-content-center align-items-center rounded rounded-pill fs-4 text-white m-0" style="width: 32px; height: 32px; cursor: pointer;">
                                <%= patient_info.fname[0] %>
                            </div>
                        </div>
                    <% } %>
                </div>
                <!-- Notifications -->
                <ul class="nav header-navbar-rht">
                    <li class="nav-item dropdown noti-nav ms-3 pe-0">
                        <a href="javascript:;" class="dropdown-toggle nav-link p-0" data-bs-toggle="dropdown">
                            <i class="fa fa-bell fs-4"></i>
                            <span class="position-absolute top-0 start-100 translate-middle p-2 <%= alerts.length > 0 ? "bg-danger border border-light rounded-circle" : "" %>">
                                <span class="visually-hidden">New alerts</span>
                            </span>
