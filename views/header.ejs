<!-- Header -->
<header class="sticky-md-top" style="border-bottom: 2px solid #1B5D92; box-shadow: 0px 4px 4px 0px #A0A0A060;" id="main-header">
    <div class="d-none d-lg-flex d-flex justify-content-center align-items-center flex-wrap py-1" style="background-color: #407081;">
        <div>
            <i class="fa fa-phone text-primary fs-6"></i>&nbsp;:&nbsp;
            <a href="tel:<%= contact_info.tel %>" class="text-white fs-7"><%= contact_info.tel %></a>
        </div>
        <div class="text-white">
            &nbsp;&nbsp;|&nbsp;
            <i class="fa fa-fax text-info fs-6"></i>&nbsp;:&nbsp;
            <a href="tel:<%= contact_info.tel %>" class="text-white fs-7"><%= contact_info.tel %></a>
        </div>
        <% if (contact_info.email) { %>
            <div>
                <span class="d-none d-md-inline text-white">&nbsp;&nbsp;|&nbsp;&nbsp;</span><i class="fa fa-envelope text-success fs-6"></i>&nbsp;:&nbsp;
                <a href="mailto:<%= contact_info.email %>" class="text-white fs-7"><%= contact_info.email %></a>
            </div>
        <% } %>
        <div class="text-white">
            &nbsp;&nbsp;|&nbsp;<%= component_text.t_topbar_emergency_call %>
        </div>
    </div>
