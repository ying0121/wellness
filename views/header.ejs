                        <a class="nav-link dropdown-toggle <%= page_tag == "educations" ? "active fw-bold" : "fw-semibold" %>" href="javascript:;" role="button" data-bs-toggle="dropdown" aria-expanded="false"><%= component_text.menu_education %></i></a>
